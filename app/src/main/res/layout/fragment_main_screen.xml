<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <hr.rma.db.assecoforecast.views.MaskedCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_side_margin"
        android:layout_marginEnd="@dimen/card_side_margin"
        android:layout_marginBottom="@dimen/card_bottom_margin"
        app:cardElevation="@dimen/card_elevation"
        app:cardPreventCornerOverlap="false"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Weather.Card">

        <RelativeLayout
            android:id="@+id/fragment_main_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/bt_change_city"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:text="Ime grada"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="9dp"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/tv_city_name"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/weather_item_image" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_current_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_city_name"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/iv_weather_icon"
                android:text="Vrijeme"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_current_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_current_temperature"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/iv_weather_icon"
                android:src="@drawable/temperature_icon" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_current_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_current_weather"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/iv_current_temperature"
                android:text="88.18Â°C"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_current_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_current_temperature"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/tv_current_temperature"
                android:src="@drawable/humidity_icon" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_current_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_current_weather"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/iv_current_humidity"
                android:text="100%"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/bt_change_city"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/tv_current_humidity"
                android:src="@drawable/location_icon"
                android:backgroundTint="@color/sky_blue_500"/>
        </RelativeLayout>
    </hr.rma.db.assecoforecast.views.MaskedCardView>
</layout>